		"octokit": "^5.0.3",
		"semver": "^7.7.2",
		"shared": "workspace:*",
		"smol-toml": "1.4.2",
		"type-flag": "^3.0.0",
		"ufo": "^1.6.1",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@swc-node/sourcemap-support": "^0.6.1",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.17.2",
		"@types/semver": "^7.7.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"cross-env": "^7.0.3",
		"electron": "37.3.1",
		"eslint": "^9.34.0",
