{
	"private": true,
	"name": "yay-root",
	"scripts": {
		"dev": "yarn workspace yay run dev",
		"watch": "yarn workspace renderer run watch",
		"build": "yarn create-asars && yarn workspaces foreach -Apti run build:d",
		"package": "yarn create-asars && cross-env ENV=PRODUCTION yarn build:p && cross-env ENV=PRODUCTION yarn workspace yay run electron:dist && yarn postpackage",
		"postpackage": "asar-trim ./build/win-unpacked/resources",
		"build:p": "yarn clean-dist && cross-env ENV=PRODUCTION yarn workspaces foreach -Apti run build:p",
		"clean-dist": "tsx scripts/clean-dist.ts",
		"create-asars": "tsx scripts/create-asars.ts",
		"create-installer": "yarn create-online-files-archive && tsx scripts/create-installer.ts",
		"create-online-files-archive": "tsx scripts/create-online-files-archive.ts",
		"create-release": "tsx scripts/create-release.ts",
		"generate-changelog": "tsx scripts/generate-changelog.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/depthbomb/yay.git"
	},
	"bugs": {
		"url": "https://github.com/depthbomb/yay/issues"
	},
	"homepage": "https://github.com/depthbomb/yay#readme",
	"workspaces": [
		"packages/app",
		"packages/renderer",
		"packages/shared",
		"packages/vite-plugin-obfuscation",
		"packages/nativelib"
	],
	"devDependencies": {
		"@octokit/rest": "^22.0.1",
		"@octokit/types": "^16.0.0",
		"@types/node": "^24.10.11",
		"asar-trim": "^1.2.3",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.4",
		"electron-builder": "26.7.0",
		"node-gyp": "^12.2.0",
		"ts-morph": "27.0.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"packageManager": "yarn@4.12.0"
}
