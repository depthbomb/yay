{
	"private": true,
	"name": "yay",
	"author": "Caprine Logic",
	"main": "dist/app.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development yarn build:d && yarn electron:test",
		"build:d": "tsc --noEmit && vite build --mode development",
		"build:p": "tsc --noEmit && vite build --mode production",
		"electron:test": "electron .",
		"electron:dist": "cross-env NODE_ENV=production yarn electron:win64",
		"electron:win64": "electron-builder --config electron-builder.config.js build -w --x64 --dir --publish=never",
		"lint": "eslint ./src --ext .ts"
	},
	"dependencies": {
		"@depthbomb/node-common": "1.2.0",
		"@formatjs/fast-memoize": "^3.0.3",
		"@hono/node-server": "^1.19.7",
		"@loglayer/transport-log-file-rotation": "^2.1.16",
		"@needle-di/core": "1.1.0",
		"cockatiel": "^3.2.1",
		"hono": "^4.11.3",
		"loglayer": "^8.4.0",
		"mitt": "^3.0.1",
		"nativelib": "workspace:*",
		"octokit": "^5.0.5",
		"semver": "^7.7.3",
		"serialize-error": "^12.0.0",
		"shared": "workspace:*",
		"smol-toml": "1.6.0",
		"type-flag": "^4.0.3",
		"ufo": "^1.6.2"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@swc-node/sourcemap-support": "^0.6.1",
		"@types/node": "^22.19.3",
		"@types/semver": "^7.7.1",
		"cross-env": "^10.1.0",
		"electron": "39.2.7",
		"eslint": "^9.39.2",
		"globals": "^17.0.0",
		"terser": "^5.44.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0",
		"vite": "^7.3.1"
	}
}
