{
	"private": true,
	"name": "yay",
	"author": "Caprine Logic",
	"main": "dist/app.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development yarn build:d && yarn electron:test",
		"build:d": "vite build --mode development",
		"build:p": "vite build --mode production",
		"electron:test": "electron .",
